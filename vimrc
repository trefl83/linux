execute pathogen#infect()
syntax on
set tabstop=8 softtabstop=0 expandtab shiftwidth=4 smarttab
set number
if has('gui_running')
    set background=dark
    colorscheme solarized
    set lines=35
    set columns=110
else
    colorscheme delek
endif

